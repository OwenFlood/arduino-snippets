{
  "name": "arduino-snippets-plus",
  "displayName": "arduino-snippets-plus",
  "description": "Code snippets for arduino",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OwenFlood/arduino-snippets"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "publisher": "owenflood",
  "engines": {
    "vscode": "^1.58.0"
  },
  "main": "./out/arduino-snippets.js",
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:cpp"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "cpp",
        "path": "./snippets/arduino-snippets.ts"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Arduino Snippets Plus",
      "properties": {
        "arduino-snippets-plus.same-line-curlies": {
          "type": "bool",
          "default": false,
          "description": "Places curly brackets on the same line rather than the next line"
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/node": "14.x",
    "typescript": "^4.3.2"
  },
  "icon": "assets/img/icon.png",
  "keywords": [
    "Arduino",
    "Snippets"
  ],
  "license": "MIT"
}
